atom_style         meso-molecular
dimension          3
newton             on
units              micro
read_data          evap_sliced.data

variable           h         equal 2.0
variable           h_act     equal 3.0
variable 		   h_mix	 equal (${h}+${h_act})/2.0
variable           c     equal 100.0             # soundspeed for Tait's EOS
variable           dt    equal 0.0001
variable		   visc_cbd      equal 6000
variable 		   visc_active   equal 6000
variable 		   visc_solvent  equal 1.6
variable		   visc_mix1     equal (${visc_cbd}+${visc_active})/2.0
variable 		   visc_mix2     equal (${visc_active}+${visc_solvent})/2.0
variable 		   visc_mix3     equal (${visc_cbd}+${visc_solvent})/2.0

group              cbd type 1 
group			   solvent type 2
group			   cbd_solvent type 1 2
group			   active type 3
group              slurry type 1 2 3
group              bc type 4

pair_style         hybrid/overlay sph/rhosum 1 sph/taitwater/morris

pair_coeff		   4 * sph/taitwater/morris 0.93 ${c} ${visc_cbd} ${h}
pair_coeff         * 4 sph/taitwater/morris 0.93 ${c} ${visc_cbd} ${h}
pair_coeff         1 1 sph/taitwater/morris 0.93 ${c} ${visc_cbd} ${h}
pair_coeff         2 2 sph/taitwater/morris 0.93 ${c} ${visc_solvent} ${h}
pair_coeff		   3 3 sph/taitwater/morris 0.93 ${c} ${visc_active} ${h_act}
pair_coeff         1 2 sph/taitwater/morris 0.93 ${c} ${visc_mix3} ${h}
pair_coeff         2 3 sph/taitwater/morris 0.93 ${c} ${visc_mix2} ${h_mix}
pair_coeff         1 3 sph/taitwater/morris 0.93 ${c} ${visc_mix1} ${h_mix}

pair_coeff         * * sph/rhosum ${h}
#pair_coeff         2 * sph/rhosum ${h}
#pair_coeff         1 3 sph/rhosum ${h_mix}
#pair_coeff         3 1 sph/rhosum ${h_mix}

timestep    ${dt}

# time-integrate position, velocities, internal energy and density of cbd particles
fix                integrate_slurry_fix slurry meso
# time-integrate only internal energy and density of boundary particles
fix                integrate_bc_fix bc meso/stationary

dump               dump_id all custom 1000 evaporatesolvent6.lammpstrj id type mol xs ys zs
dump_modify        dump_id first yes
dump_modify 	   dump_id sort 3

#compute thermo_temp slurry temp
#thermo_modify temp slurry
uncompute thermo_temp
compute thermo_temp slurry temp
thermo             1000
thermo_style       custom step time temp press density lx ly lz
thermo_modify      norm no

neigh_modify       every 5 delay 0 check no
variable           skin equal 0.3*${h}
neighbor           ${skin} bin # set Verlet list skin distance

region evap_region_all block 0 EDGE 0 EDGE 0 EDGE
region evap_region_upper block 0 EDGE 0 EDGE 10 EDGE
region evap_region_midupper block 0 EDGE 0 EDGE 7 10
region evap_region_midlower block 0 EDGE 0 EDGE 4 7
region evap_region_lower block 0 EDGE 0 EDGE 0 4

#fix evap_all cbd evaporate 1000 5 evap_region_all 140

fix evap_all solvent evaporate 1000 2 evap_region_all 140
#fix evap_upper solvent evaporate 1000 4 evap_region_upper 139
#fix evap_upper solvent evaporate 1000 3 evap_region_midupper 138
#fix evap_upper solvent evaporate 1000 2 evap_region_midlower 137
#fix evap_upper solvent evaporate 1000 1 evap_region_lower 136

#fix make_rigid active rigid/nvt molecule temp 3000 3000 30
fix add_gravity slurry gravity 9.8 vector 0 0 -1

fix cool cbd_solvent nvt temp 300 300 30

fix cool_active active nvt temp 3000 300 30
#fix cool_cbd cbd nvt temp 3000 3000 30

run 300000


